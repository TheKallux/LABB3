<UserControl x:Class="LABB3.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu>
        <MenuItem Header="_File">
            <MenuItem Header="_New Question Pack"
                      Icon="{fa:Icon plus}"
                      Command="{Binding CreateNewPackCommand}"/>
            
            <MenuItem Header="_Select Question Pack"
                      Icon="{fa:Icon check}"
                      Command="{Binding SelectPackCommand}"/>
            
            <MenuItem Header="_Delete Question Pack"
                      Icon="{fa:Icon minus}"
                      Command="{Binding DeletePackCommand}"/>
            
            <Separator />
            
            <MenuItem Header="Import Questions" InputGestureText="Ctrl+I"
                      Icon="{fa:Icon cloudarrowup}" />
            
            <Separator />
            
            <MenuItem Header="E_xit" InputGestureText="Alt+F4"
                      Icon="{fa:Icon XMark}" />
        </MenuItem>

        <MenuItem Header="_Edit">
            <MenuItem Header="Add Question"
                      Icon="{fa:Icon plus}" />
            <MenuItem Header="Remove Question" InputGestureText="Ctrl+R"
                      Icon="{fa:Icon minus}" />
            <MenuItem Header="Set PackName"
                      Icon="{fa:Icon pentosquare}"
                      Command="{Binding PlayerViewModel.SetPackNameCommand}" />
        </MenuItem>

        <MenuItem Header="_View">
            <MenuItem Header="_Play" InputGestureText="Ctrl+P"
                      Icon="{fa:Icon play}" />
            <MenuItem Header="_Edit" InputGestureText="Ctrl+E"
                      Icon="{fa:Icon pentosquare}" />
            <Separator />
            <MenuItem Header="Fullscreen" InputGestureText="Alt+Enter"
                      Icon="{fa:Icon expand}" />
        </MenuItem>
    </Menu>
</UserControl>