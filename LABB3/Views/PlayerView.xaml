<UserControl x:Class="LABB3.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding TimeRemaining, StringFormat='Time: {0}s'}"
                   FontSize="16" Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Column="1" />

        <TextBlock Text="{Binding CurrentQuestion.Query}"
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   FontSize="18" FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="20,10,20,0"
                   VerticalAlignment="Top"
                   TextAlignment="Center" />

        <Button Command="{Binding AnswerQuestionCommand}"
                CommandParameter="0"
                Grid.Row="0" Grid.Column="0"
                Margin="125,72,10,10"
                Padding="10"
                Background="White"
                BorderThickness="2"
                BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Answer0Icon}"
                           Foreground="{Binding Answer0IconColor}"
                           FontSize="16" Margin="0,0,5,0" />
                <TextBlock Text="{Binding Answer0}" FontSize="16" />
            </StackPanel>
        </Button>

        <Button Command="{Binding AnswerQuestionCommand}"
                CommandParameter="1"
                Grid.Row="0" Grid.Column="1"
                Margin="10,72,125,10"
                Padding="10"
                Background="White"
                BorderThickness="2"
                BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Answer1Icon}"
                           Foreground="{Binding Answer1IconColor}"
                           FontSize="16" Margin="0,0,5,0" />
                <TextBlock Text="{Binding Answer1}" FontSize="16" />
            </StackPanel>
        </Button>

        <Button Command="{Binding AnswerQuestionCommand}"
                CommandParameter="2"
                Grid.Row="1" Grid.Column="0"
                Margin="125,10,10,72"
                Padding="10"
                Background="White"
                BorderThickness="2"
                BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Answer2Icon}"
                           Foreground="{Binding Answer2IconColor}"
                           FontSize="16" Margin="0,0,5,0" />
                <TextBlock Text="{Binding Answer2}" FontSize="16" />
            </StackPanel>
        </Button>

        <Button Command="{Binding AnswerQuestionCommand}"
                CommandParameter="3"
                Grid.Row="1" Grid.Column="1"
                Margin="10,10,125,72"
                Padding="10"
                Background="White"
                BorderThickness="2"
                BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Answer3Icon}"
                           Foreground="{Binding Answer3IconColor}"
                           FontSize="16" Margin="0,0,5,0" />
                <TextBlock Text="{Binding Answer3}" FontSize="16" />
            </StackPanel>
        </Button>

        <TextBlock Text="{Binding QuestionProgress}"
                   Margin="200,45,200,0"
                   VerticalAlignment="Top" Grid.ColumnSpan="2"
                   TextAlignment="Center" />
    </Grid>
</UserControl>