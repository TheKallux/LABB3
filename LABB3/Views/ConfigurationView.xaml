<UserControl x:Class="LABB3.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding ConfigurationViewModel}"
>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="0">

            <Label Content="{Binding ActivePack.Name}"
                   FontSize="20" Height="48" Width="180" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                <Button Content="← Menu" Command="{Binding BackCommand}"
                        Padding="10" Margin="5" Width="80"
                        ToolTip="Main Menu" />

                <Button Margin="5" Content="{fa:Icon sliders}"
                        Width="30" Command="{Binding EditPackOptionsCommand}"
                        ToolTip="Pack Options" />

                <Button Margin="5" Content="+"
                        Width="30" Command="{Binding AddQuestionCommand}"
                        ToolTip="Add Question" />

                <Button Margin="5" Content="-"
                        Width="30" Command="{Binding RemoveQuestionCommand}"
                        ToolTip="Delete Question" />
            </StackPanel>
        </DockPanel>

        <ListBox Grid.Row="1" Margin="5" ItemsSource="{Binding ActivePack.Questions}"
                 DisplayMemberPath="Query" SelectedItem="{Binding ActiveQuestion, Mode=TwoWay}" />

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.RowSpan="2">

            <Label Content="Question:" FontSize="20"
                   Margin="0 10 0 0" />

            <TextBox Height="70" Margin="5 9 5 5" Text="{Binding ActiveQuestion.Query, Mode=TwoWay}" 
                     IsEnabled="{Binding CanEditQuestion}" />

            <Label Content="Correct answer:" />
            <TextBox Margin="5" Text="{Binding ActiveQuestion.CorrectAnswer, Mode=TwoWay}" 
                     IsEnabled="{Binding CanEditQuestion}" />

            <Label Content="First incorrect answer:" />
            <TextBox Margin="5" Text="{Binding ActiveQuestion.IncorrectAnswers[0], Mode=TwoWay}" 
                     IsEnabled="{Binding CanEditQuestion}" />

            <Label Content="Second incorrect answer:" />
            <TextBox Margin="5" Text="{Binding ActiveQuestion.IncorrectAnswers[1], Mode=TwoWay}" 
                     IsEnabled="{Binding CanEditQuestion}" />

            <Label Content="Third incorrect answer:" />
            <TextBox Margin="5" Text="{Binding ActiveQuestion.IncorrectAnswers[2], Mode=TwoWay}" 
                     IsEnabled="{Binding CanEditQuestion}" />
        </StackPanel>
    </Grid>
</UserControl>